      }
      .row:nth-of-type(odd) {
      background: #e9e9e9;
      }
      .row.header {
      font-weight: 900;
      color: #ffffff;
      background: #ea6153;
      }
      .row.green {
      background: #27ae60;
      }
      .row.blue {
      background: #2980b9;
      }
      @media screen and (max-width: 580px) {
      .row {
      padding: 8px 0;
      display: block;
      }
      }
      .cell {
      padding: 6px 12px;
      display: table-cell;
      }
      @media screen and (max-width: 580px) {
      .cell {
      padding: 2px 12px;
      display: block;
      }
      }
