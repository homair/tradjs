extend _layout

block content
  #myModal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          h4.modal-title.
        .modal-body
          each lang, keyLang in listeLang
            .form-group(data-lang=keyLang)
              p Langue :
                label=keyLang


  center
    input.search(id='searching', type='text', name='search', placeholder='Rechercher...')
  .wrapper
    table#tab_logic.table.table-bordered
      thead.color
        tr
          th.
           Cl√©s
          each val in listeLang
            th= val.label

      tbody
        each val, key in objReturn
          tr.line(id='row_'+ key.replace(/\./gi, '-'), data-key=key)
            th
              span.key(id='data.'+key)=key
              button.close(id='btn_'+key, type='button', value='Supprimer', data-inputkey=key, data-dismiss='alert', data-spec='spec')
                span.cross(aria-hidden='true') x
                span.sr-only Close

            each lang, keyLang in listeLang
              td#aze(data-lang=keyLang)
                textarea.form-control(id=keyLang, data-key='data.'+key, data-lang=keyLang)=val[keyLang]||''
