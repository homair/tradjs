block content
  -
   label = labels[0].data
  table
    thead
      tr
        td.
          Clés
        td.
          Anglais
        td.
          Français
    each label1, index in labels[1].data
      tr
        td
          input.form-control(type='text', value= index)
        td
          input.form-control(id='doc0' type='text', value= label[index])
